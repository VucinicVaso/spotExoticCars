{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="row">

		{# news #}
		<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 mt-2 mb-2">
			<h1 class="text-center text-white">News</h1>
			
		{% if news is empty %}
			<p class="text-center alert alert-danger">0 news!</p>
		{% else %}
	
			{% for id, article in news %}
			<div class="card bg-primary my-1 mx-1 py-1 px-1">
				<div class="card-body text-white flex-wrap">
					<h2 class="text-center">{{ article.title }} - <small>({{ article.getCreatedAt()|date("m/d/Y") }})</small></h2>
					<div class="row">
					{% for id, image in article.images %}
						{% if id == 0 %}
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mb-1">
							<img src="{{ asset('assets/images/') }}{{ image }}" class="w-100 img-fluid" style="height: 200px;" />
						</div>
						{% else %}
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 mb-1">
							<img src="{{ asset('assets/images/') }}{{ image }}" class="w-100 img-fluid" style="height: 200px;"  />
						</div>
						{% endif %}
					{% endfor %}
					</div>
					<div class="row">
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
							<p>{{ article.body }}</p>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
								<div class="btn-group w-100">
								<a href="#" class="btn btn-warning w-100">EDIT</a>
								<a href="{{ path('news_delete', {'id': article.id}) }}" class="btn btn-danger w-100">DELETE</a>
							</div> 
						</div>
					</div>
				</div>
			</div>
			{% endfor %}

		{% endif %}
		</div>

		{# create article #}
		<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 mt-2 mb-2">
			<div class="card bg-primary">
                {% for message in app.flashes('notice') %}
                <div class="card-header alert alert-warning">
                    <p class="text-center">{{ message }}</p>
                </div>
                {% endfor %}
				<div class="card-body">
					<h2 class="text-center">Create</h2>
					
					{{ form_start(form) }}
		            {{ form_widget(form) }}
		            {{ form_end(form) }}
				</div>			
            </div>
		</div>

	</div>
{% endblock %}
