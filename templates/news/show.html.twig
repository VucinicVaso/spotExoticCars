{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

	<div class="row">

		<div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12 text-white mt-5 mb-5">
       
			<div class="d-flex flex-column justify-content-around flex-wrap text-center text-white">
            	<a href="{{ path('pages_index') }}" class="text-white mt-3 mb-3"><i class="fas fa-arrow-left"></i> NEWS</a>
				<h1>NEWS: {{ title }}</h1>
				<small>CREATED: {{ article.getCreatedAt()|date("m/d/Y") }}</small>
			</div>

			<img src="{{ asset('assets/images/') }}{{ article.images[0] }}" class="w-100" style="height: 500px;">

			<p class="py-2 px-2">{{ article.body }}</p>
		
			<div class="row">
			{% for id, image in article.images %}
			{% if id == 0 %}
			{% else %}
				<div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
					<img src="{{ asset('assets/images/') }}{{ image }}" class="w-100" style="height: 250px;">
				</div>
			{% endif %}
			{% endfor %}
			</div>
		
		</div>
		
		<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 my-5">
			{# sidebar #}
			{% include 'includes/sidebar.html.twig' %}
		</div>

	</div>

{% endblock %}
