{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

	<div class="row py-5">

		<div class=" col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 d-flex flex-column justify-content-around flex-wrap text-center text-white">
        	<a href="{{ path('admin_profile') }}" class="text-white mt-3 mb-3"><i class="fas fa-arrow-left"></i> BACK TO THE ADMIN PANEL</a>
			<h1>{{ title }}</h1>
		</div>
		
		{# search brand #}
		<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
			<div class="card btn-group-lg bg-dark border border-primary my-1 mx-1 py-3 px-3">
				<div class="card-body d-flex flex-column justify-content-center text-center text-white">
					<i class="fas fa-folder-open" style="font-size: 25px;"></i>
					<p class="card-text" style="font-size: 25px;">({{ count_brand }}) BRAND</p>
					<div class="btn-group">
						<button class="btn btn-outline-primary" data-toggle="modal" data-target="#brandList">View List</button>
						<button class="btn btn-outline-success" data-toggle="modal" data-target="#brandCreate">Create New</button>
					</div>
				</div>
			</div>
		</div>
    	{% include 'brandandmodel/view_brands_modal.html.twig' %}
    	{% include 'brandandmodel/create_brand_modal.html.twig' %}

		{# search model #}
		<div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
			<div class="card btn-group-lg bg-dark border border-primary my-1 mx-1 py-3 px-3">
				<div class="card-body d-flex flex-column justify-content-center text-center text-white">
					<i class="fas fa-folder-open" style="font-size: 25px;"></i>
					<p class="card-text" style="font-size: 25px;">({{ count_model }}) MODEL</p>
					<div class="btn-group">
						<button class="btn btn-outline-primary" data-toggle="modal" data-target="#modelList">View List</button>
						<button class="btn btn-outline-success" data-toggle="modal" data-target="#modelCreate">Create New</button>
					</div>
				</div>
			</div>
		</div>
    	{% include 'brandandmodel/view_model_modal.html.twig' %}
    	{% include 'brandandmodel/create_model_modal.html.twig' %}

	</div>

{% endblock %}
